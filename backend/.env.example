# Prisma Talent Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# Application
APP_NAME="Prisma Talent API"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"

# Server
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000,https://talent.getprisma.io"

# Supabase
SUPABASE_URL="https://vhjjibfblrkyfzcukqwa.supabase.co"
SUPABASE_KEY="your-supabase-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"

# JWT
JWT_SECRET="your-secret-key-here-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"
FROM_EMAIL="hello@getprisma.io"
REPLY_TO_EMAIL="hello@getprisma.io"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Admin
DEFAULT_ADMIN_EMAIL="admin@getprisma.io"

# Frontend URLs (for email links)
FRONTEND_URL="https://talent.getprisma.io"
ADMIN_DASHBOARD_URL="https://talent.getprisma.io/admin"
CLIENT_PORTAL_URL="https://talent.getprisma.io/portal"

# Sentry (optional - for error tracking)
SENTRY_DSN=""

# PostHog (optional - for analytics)
POSTHOG_API_KEY=""
POSTHOG_HOST="https://app.posthog.com"
